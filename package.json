{
  "name": "@rester/core",
  "version": "0.12.10",
  "description": "A TypeScript framework, like Spring Boot.",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs",
    "example": "src/demo",
    "test": "src/test"
  },
  "files": [
    "dist",
    "docs"
  ],
  "keywords": [
    "restful",
    "server",
    "di",
    "spring mvc",
    "spring boot",
    "typescript",
    "nodejs"
  ],
  "homepage": "https://github.com/DevinDon/rester-core",
  "scripts": {
    "build": "bash scripts/build.sh",
    "clean": "bash scripts/clean.sh",
    "demo:full": "node -r ts-node/register src/demo/full",
    "demo:simple": "node -r ts-node/register src/demo/simple",
    "lint": "eslint .",
    "pack": "npm run build",
    "push": "bash scripts/push.sh",
    "postpublish": "curl https://npm.taobao.org/sync/@rester/core",
    "prepublishOnly": "npm run clean && tsc",
    "start": "npm run start:dev",
    "start:debug": "node --inspect-brk -r ts-node/register src/main/index.ts",
    "start:demo": "cross-env MODE=DEV node -r ts-node/register src/demo/index.ts",
    "start:dev": "cross-env MODE=DEV node -r ts-node/register src/main/index.ts",
    "start:prod": "npm run build && cross-env MODE=PROD node dist",
    "test": "node node_modules/jasmine/bin/jasmine.js --config=src/test/jasmine.json --reporter=jasmine-console-reporter --require=ts-node/register",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/DevinDon/rester-core.git"
  },
  "bugs": {
    "url": "https://github.com/DevinDon/rester-core/issues"
  },
  "author": "IInfinity <I.INF@Outlook.com> (https://don.red)",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@iinfinity/delay": "0.1.1",
    "@iinfinity/logger": "0.3.4",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.2.31"
  },
  "devDependencies": {
    "@types/jasmine": "3.6.4",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "7.0.0",
    "cross-env": "7.0.3",
    "eslint": "^7.21.0",
    "jasmine": "3.6.4",
    "jasmine-console-reporter": "3.1.0",
    "ts-loader": "8.0.17",
    "ts-node": "9.1.1",
    "typescript": "4.2.2",
    "webpack": "5.24.2",
    "webpack-cli": "4.5.0"
  },
  "optionalDependencies": {
    "mongodb": "^3.6.4",
    "sqlite3": "^5.0.2"
  }
}
