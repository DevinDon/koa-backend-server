{
  "name": "@rester/core",
  "version": "0.13.6",
  "description": "A TypeScript framework, like Spring Boot.",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs",
    "example": "src/demo",
    "test": "src/test"
  },
  "files": [
    "dist",
    "docs"
  ],
  "keywords": [
    "restful",
    "server",
    "di",
    "spring mvc",
    "spring boot",
    "typescript",
    "nodejs"
  ],
  "homepage": "https://github.com/DevinDon/rester-core",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist out temp",
    "demo": "node -r ts-node/register src/demo/${DEMO}/main.ts",
    "lint": "eslint . --fix",
    "prepublishOnly": "npm run clean && npm run build",
    "postpublish": "curl https://npm.taobao.org/sync/@rester/core",
    "test": "node node_modules/jasmine/bin/jasmine.js --config=src/test/jasmine.json --reporter=jasmine-console-reporter --require=ts-node/register",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/DevinDon/rester-core.git"
  },
  "bugs": {
    "url": "https://github.com/DevinDon/rester-core/issues"
  },
  "author": "IInfinity <I.INF@Outlook.com> (https://don.red)",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@iinfinity/logger": "0.3.4",
    "class-validator": "^0.13.1",
    "mime-types": "^2.1.29",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.2.31"
  },
  "devDependencies": {
    "@types/jasmine": "3.6.4",
    "@types/js-yaml": "^4.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "jasmine": "3.6.4",
    "jasmine-console-reporter": "3.1.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  },
  "optionalDependencies": {
    "mongodb": "^3.6.4",
    "sqlite3": "^5.0.2"
  }
}
